{
  "name": "@puzzleitc/puzzle-shell",
  "version": "1.0.0",
  "description": "The standard design for Puzzle tools",
  "main": "dist/bundle.js",
  "module": "index.js",
  "scripts": {
    "start": "web-dev-server",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "web-dev-server -c .storybook/server.mjs",
    "storybook:build": "build-storybook",
    "prepare": "husky install",
    "manifest": "custom-elements-manifest analyze --litelement --globs=\"src/components/*.js\"",
    "bundle": "rm -rf dist/ && esbuild index.js --bundle --minify --sourcemap --outfile=dist/bundle.js",
    "prepack": "npm run manifest && npm run bundle"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/puzzle/puzzle-shell.git"
  },
  "keywords": [
    "design",
    "theme",
    "look"
  ],
  "author": "Mathis Hofer <hofer@puzzle.ch>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/puzzle/puzzle-shell/issues"
  },
  "homepage": "http://puzzle.github.com/puzzle-shell",
  "files": [
    "index.js",
    "*.md",
    "LICENSE",
    "custom-elements.json",
    "src",
    "dist"
  ],
  "dependencies": {
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.4",
    "@koa/cors": "^3.1.0",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/test-runner": "^0.13.4",
    "esbuild": "^0.12.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "prettier"
    ]
  },
  "prettier": {
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElementsManifest": "custom-elements.json",
  "customElements": "custom-elements.json"
}
